<h3 id="editing_song_title">
  <% unless @song.title.nil? %>
      <%= @song.title %>
  <% end %>
</h3>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span12">
    <div class="boxes">
      <pre id="song_parse_show" class="scroll_2 pre-scrollable" style="float:right"><% @parsed.each do |line| %><%= line.strip << "\n  " %><% end %></pre>
      <pre id="song_body" class="pre-scrollable"><%= @song.body %></pre>
    </div>

    <div class="btn-group">
      <%= link_to 'Edit this Song', edit_song_path(@song), :class => "btn btn-warning" %> |
      <%= link_to 'List of Songs', songs_path, :class => "btn btn-success" %>
    </div>
  </div>
</div>
